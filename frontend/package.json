{
  "name": "neurobotanica-pos",
  "version": "1.0.0",
  "description": "NeuroBotanica Tablet POS Interface for Nevada Dispensaries",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "build:static": "next build",
    "build:electron": "next build && electron-builder",
    "build:android": "next build && npx cap add android && npx cap sync android && cd android && ./gradlew assembleDebug",
    "build:ios": "next build && npx cap add ios && npx cap sync ios",
    "publish:eslint-plugin": "cd patched-packages/eslint-plugin-next && npm publish --access public --ignore-scripts --tag patched"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@headlessui/react": "^1.7.0",
    "axios": "^1.6.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.0.0",
    "gsap": "^3.14.2",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.48.0",
    "swr": "^2.2.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "20.19.27",
    "@types/react": "18.3.27",
    "@types/react-dom": "^18.0.0",
    "@next/eslint-plugin-next": "npm:@cloakquillresearch-2026/eslint-plugin-next@14.2.35-patched.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "@next/eslint-plugin-next": "npm:@cloakquillresearch-2026/eslint-plugin-next@14.2.35-patched.0"
  },
  "main": "electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.neurobotanica.pos",
    "productName": "NeuroBotanica POS",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "capacitor": {
    "appId": "com.neurobotanica.pos",
    "appName": "NeuroBotanica POS",
    "bundledWebRuntime": false,
    "webDir": "out"
  }
}
