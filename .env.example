# NeuroBotanica Backend Environment Variables
# Copy this to .env and update values for your environment

# Database Configuration
DATABASE_URL=sqlite:///./neurobotanica.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@host:port/database

# Security
SECRET_KEY=your_strong_secret_key_here
NEUROBOTANICA_TOKEN_VALIDATION=false

# Environment
DEBUG=false
ENVIRONMENT=production

# Optional: External API Keys (if needed)
# OPENAI_API_KEY=your_key_here
# PUBMED_API_KEY=your_key_here